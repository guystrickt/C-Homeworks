public class Program
{
    public static void Main(string[] args)
    {
       const int gradesCount = 5;

        int[] grades = new int[gradesCount];
        Console.WriteLine($"пожалуйста,введите {gradesCount} оценок");

        for (int i = 0; i < gradesCount; i++)
        {
            Console.WriteLine($"введите оценку №{i + 1}");
            grades[i] = Convert.ToInt32(Console.ReadLine());
        }
        int sum = 0;
        int minGrade = grades[0];
        int maxGrade = grades[0];
        foreach (int grade in grades)
        {
         sum += grade;

            if (grade < minGrade)
            { 
             minGrade = grade;
            }
            if (grade > maxGrade)
            {
                maxGrade = grade;
            }
        }
        double average = (double)sum / grades.Length;

        Console.WriteLine($"Максимальная оценка:{maxGrade}");
        Console.WriteLine($"Минимальная оценка: {minGrade}");
        Console.WriteLine($"Средний балл: {average}");

        Console.ReadLine();



    }   
}
